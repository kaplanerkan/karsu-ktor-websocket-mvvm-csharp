<Window x:Class="ChatClientWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:ChatClientWpf.ViewModels"
        Title="KarSu Chat Client (C#)" Height="500" Width="600">

    <Window.DataContext>
        <vm:ChatViewModel />
    </Window.DataContext>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Connection Bar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
            <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                     Width="100" Margin="0,0,6,0"
                     ToolTip="Username" />
            <TextBox Text="{Binding Host, UpdateSourceTrigger=PropertyChanged}"
                     Width="130" Margin="0,0,6,0"
                     ToolTip="Host address" />
            <TextBox Text="{Binding Port, UpdateSourceTrigger=PropertyChanged}"
                     Width="50" Margin="0,0,6,0"
                     ToolTip="Port" />
            <Button Content="Connect" Command="{Binding ConnectCommand}"
                    Padding="12,4" Margin="0,0,4,0" />
            <Button Content="Disconnect" Command="{Binding DisconnectCommand}"
                    Padding="12,4" />
        </StackPanel>

        <!-- Status Bar -->
        <TextBlock Grid.Row="1" Text="{Binding ConnectionStatus}"
                   FontSize="13" Margin="0,0,0,8" />

        <!-- Message List -->
        <ListBox Grid.Row="2" ItemsSource="{Binding Messages}"
                 BorderThickness="1" BorderBrush="#DDD"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 x:Name="MessageList"
                 HorizontalContentAlignment="Stretch">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    <Setter Property="Padding" Value="0" />
                    <Setter Property="Margin" Value="0" />
                    <Setter Property="Focusable" Value="False" />
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <!-- My message: right-aligned, teal bubble -->
                        <Border x:Name="Bubble"
                                Background="#DCF8C6"
                                CornerRadius="12,12,2,12"
                                Padding="10,6"
                                Margin="80,2,4,2"
                                HorizontalAlignment="Right"
                                MaxWidth="380">
                            <StackPanel>
                                <TextBlock FontSize="11" Foreground="#075E54" FontWeight="SemiBold">
                                    <Run Text="{Binding Sender, Mode=OneWay}" />
                                    <Run Text=" Â· " Foreground="Gray" />
                                    <Run Text="{Binding FormattedTime, Mode=OneWay}" Foreground="Gray" />
                                </TextBlock>
                                <TextBlock Text="{Binding Content, Mode=OneWay}" FontSize="14"
                                           TextWrapping="Wrap" Margin="0,3,0,0" />
                            </StackPanel>
                        </Border>
                    </Grid>
                    <DataTemplate.Triggers>
                        <!-- Other users: left-aligned, white/light bubble -->
                        <DataTrigger Binding="{Binding IsFromMe}" Value="False">
                            <Setter TargetName="Bubble" Property="Background" Value="#FFFFFF" />
                            <Setter TargetName="Bubble" Property="CornerRadius" Value="12,12,12,2" />
                            <Setter TargetName="Bubble" Property="HorizontalAlignment" Value="Left" />
                            <Setter TargetName="Bubble" Property="Margin" Value="0,2,80,2" />
                        </DataTrigger>
                        <!-- Server messages: centered, light gray bubble -->
                        <DataTrigger Binding="{Binding IsFromServer}" Value="True">
                            <Setter TargetName="Bubble" Property="Background" Value="#E8E8E8" />
                            <Setter TargetName="Bubble" Property="CornerRadius" Value="12" />
                            <Setter TargetName="Bubble" Property="HorizontalAlignment" Value="Center" />
                            <Setter TargetName="Bubble" Property="Margin" Value="40,2,40,2" />
                            <Setter TargetName="Bubble" Property="MaxWidth" Value="300" />
                        </DataTrigger>
                    </DataTemplate.Triggers>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Input Bar -->
        <DockPanel Grid.Row="3" Margin="0,8,0,0">
            <Button Content="Send" Command="{Binding SendCommand}"
                    DockPanel.Dock="Right" Padding="16,6" Margin="6,0,0,0" />
            <TextBox Text="{Binding MessageInput, UpdateSourceTrigger=PropertyChanged}"
                     VerticalContentAlignment="Center" Padding="6,4"
                     FontSize="14">
                <TextBox.InputBindings>
                    <KeyBinding Key="Return" Command="{Binding SendCommand}" />
                </TextBox.InputBindings>
            </TextBox>
        </DockPanel>
    </Grid>
</Window>
