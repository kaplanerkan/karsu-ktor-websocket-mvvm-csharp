<Window x:Class="ChatClientWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:ChatClientWpf.ViewModels"
        Title="KarSu Chat Client (C#)" Height="500" Width="600"
        Background="{DynamicResource BgBrush}">

    <Window.DataContext>
        <vm:ChatViewModel />
    </Window.DataContext>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Connection Bar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
            <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                     Width="90" Margin="0,0,6,0"
                     ToolTip="Username" />
            <TextBox Text="{Binding Host, UpdateSourceTrigger=PropertyChanged}"
                     Width="110" Margin="0,0,6,0"
                     ToolTip="Host address" />
            <TextBox Text="{Binding Port, UpdateSourceTrigger=PropertyChanged}"
                     Width="45" Margin="0,0,6,0"
                     ToolTip="Port" />
            <TextBox Text="{Binding RoomId, UpdateSourceTrigger=PropertyChanged}"
                     Width="80" Margin="0,0,6,0"
                     ToolTip="Room ID" />
            <Button Content="Connect" Command="{Binding ConnectCommand}"
                    Padding="12,4" Margin="0,0,4,0" />
            <Button Content="Disconnect" Command="{Binding DisconnectCommand}"
                    Padding="12,4" Margin="0,0,4,0" />
            <Button Content="&#x2600;/&#x1F319;" Command="{Binding ToggleThemeCommand}"
                    Padding="8,4" ToolTip="Toggle Dark/Light Theme"
                    Background="Transparent" BorderThickness="0" FontSize="14" />
        </StackPanel>

        <!-- Status Bar -->
        <DockPanel Grid.Row="1" Margin="0,0,0,8">
            <TextBlock Text="{Binding ConnectionStatus}"
                       Foreground="{DynamicResource PrimaryBrush}"
                       FontSize="13" />
            <TextBlock Text="{Binding OnlineUsersText}"
                       Foreground="#80CBC4" FontSize="12"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Cursor="Hand"
                       ToolTip="Click to select DM target"
                       MouseLeftButtonUp="OnOnlineUsersClick" />
        </DockPanel>

        <!-- Message List -->
        <ListBox Grid.Row="2" ItemsSource="{Binding Messages}"
                 BorderThickness="1"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 x:Name="MessageList"
                 HorizontalContentAlignment="Stretch">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    <Setter Property="Padding" Value="0" />
                    <Setter Property="Margin" Value="0" />
                    <Setter Property="Focusable" Value="False" />
                    <Setter Property="Background" Value="Transparent" />
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <!-- My message: right-aligned, teal bubble -->
                        <Border x:Name="Bubble"
                                Background="#1A4D4A"
                                CornerRadius="12,12,2,12"
                                Padding="10,6"
                                Margin="80,2,4,2"
                                HorizontalAlignment="Right"
                                MaxWidth="380">
                            <StackPanel>
                                <TextBlock x:Name="SenderText" FontSize="11" Foreground="#4DB6AC" FontWeight="SemiBold">
                                    <Run Text="{Binding Sender, Mode=OneWay}" />
                                    <Run Text=" Â· " Foreground="#888888" />
                                    <Run Text="{Binding FormattedTime, Mode=OneWay}" Foreground="#888888" />
                                    <Run Text=" " />
                                    <Run x:Name="StatusRun" Text="{Binding StatusIcon, Mode=OneWay}" Foreground="#80CBC4" FontSize="10" />
                                </TextBlock>
                                <!-- Text content (hidden for voice messages) -->
                                <TextBlock x:Name="ContentText" Text="{Binding Content, Mode=OneWay}" FontSize="14"
                                           Foreground="#E0E0E0"
                                           TextWrapping="Wrap" Margin="0,3,0,0" />
                                <!-- Voice message panel (hidden for text messages) -->
                                <StackPanel x:Name="VoicePanel" Orientation="Horizontal"
                                            Visibility="Collapsed" Margin="0,3,0,0">
                                    <Button Content="&#9654;" FontSize="16" Padding="6,2"
                                            Foreground="#4DB6AC" Background="Transparent" BorderThickness="0"
                                            Command="{Binding DataContext.PlayVoiceCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                            CommandParameter="{Binding}" Cursor="Hand" />
                                    <TextBlock Text="{Binding FormattedDuration, Mode=OneWay}"
                                               Foreground="#AAAAAA" FontSize="13"
                                               VerticalAlignment="Center" Margin="6,0,0,0" />
                                    <TextBlock Text="Voice" Foreground="#888888" FontSize="12"
                                               VerticalAlignment="Center" Margin="8,0,0,0"
                                               FontStyle="Italic" />
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>
                    <DataTemplate.Triggers>
                        <!-- Voice message: show voice panel, hide text content -->
                        <DataTrigger Binding="{Binding IsVoice}" Value="True">
                            <Setter TargetName="ContentText" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="VoicePanel" Property="Visibility" Value="Visible" />
                        </DataTrigger>
                        <!-- Other users: left-aligned, dark surface bubble -->
                        <DataTrigger Binding="{Binding IsFromMe}" Value="False">
                            <Setter TargetName="Bubble" Property="Background" Value="#2B2B30" />
                            <Setter TargetName="Bubble" Property="CornerRadius" Value="12,12,12,2" />
                            <Setter TargetName="Bubble" Property="HorizontalAlignment" Value="Left" />
                            <Setter TargetName="Bubble" Property="Margin" Value="0,2,80,2" />
                            <Setter TargetName="SenderText" Property="Foreground" Value="#80CBC4" />
                        </DataTrigger>
                        <!-- Server messages: centered, subtle bubble -->
                        <DataTrigger Binding="{Binding IsFromServer}" Value="True">
                            <Setter TargetName="Bubble" Property="Background" Value="#3A3A40" />
                            <Setter TargetName="Bubble" Property="CornerRadius" Value="12" />
                            <Setter TargetName="Bubble" Property="HorizontalAlignment" Value="Center" />
                            <Setter TargetName="Bubble" Property="Margin" Value="40,2,40,2" />
                            <Setter TargetName="Bubble" Property="MaxWidth" Value="300" />
                            <Setter TargetName="SenderText" Property="Foreground" Value="#999999" />
                            <Setter TargetName="ContentText" Property="Foreground" Value="#BBBBBB" />
                        </DataTrigger>
                    </DataTemplate.Triggers>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Typing Indicator -->
        <TextBlock Grid.Row="3" Text="{Binding TypingStatus}"
                   Foreground="#80CBC4" FontSize="12" FontStyle="Italic"
                   Margin="4,2,4,0" />

        <!-- Emoji Picker Popup -->
        <Popup x:Name="EmojiPopup" Placement="Top" PlacementTarget="{Binding ElementName=BtnEmoji}"
               StaysOpen="False" AllowsTransparency="True">
            <Border Background="#2B2B30" BorderBrush="#3A3A40" BorderThickness="1"
                    CornerRadius="8" Padding="6">
                <WrapPanel x:Name="EmojiPanel" Width="260" MaxHeight="200" />
            </Border>
        </Popup>

        <!-- Input Bar -->
        <DockPanel Grid.Row="4" Margin="0,8,0,0">
            <Button Content="Send" Command="{Binding SendCommand}"
                    DockPanel.Dock="Right" Padding="16,6" Margin="6,0,0,0" />
            <Button x:Name="BtnMic" DockPanel.Dock="Right"
                    Padding="10,6" Margin="6,0,0,0"
                    IsEnabled="{Binding IsConnected}"
                    ToolTip="Hold to record voice message">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Content" Value="&#x1F3A4;" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsRecording}" Value="True">
                                <Setter Property="Content" Value="&#x1F534;" />
                                <Setter Property="Opacity" Value="0.7" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button x:Name="BtnEmoji" DockPanel.Dock="Right"
                    Content="&#128522;" Padding="8,4" Margin="6,0,0,0"
                    Background="Transparent" BorderThickness="0" FontSize="18"
                    Click="OnEmojiClick" ToolTip="Emoji picker" />
            <TextBox Text="{Binding MessageInput, UpdateSourceTrigger=PropertyChanged}"
                     VerticalContentAlignment="Center" Padding="6,4"
                     FontSize="14" x:Name="TxtMessage">
                <TextBox.InputBindings>
                    <KeyBinding Key="Return" Command="{Binding SendCommand}" />
                </TextBox.InputBindings>
            </TextBox>
        </DockPanel>
    </Grid>
</Window>
